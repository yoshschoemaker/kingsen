            <children>
                <ImageView fitHeight="125.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/images/bottom-dec.png" />
                    </image>
                </ImageView>
            </children>
        </VBox>

        <HBox alignment="TOP_LEFT" AnchorPane.leftAnchor="16.0" AnchorPane.topAnchor="16.0">
            <children>
                <ImageView fitHeight="16.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/images/crown-white.png" />
                    </image>
                    <HBox.margin>
                        <Insets>
                            <right>8</right>
                        </Insets>
                    </HBox.margin>
                </ImageView>
                <Text fx:id="kingsLeftToFind" fill="WHITE" text="4" style="-fx-font-family: Open Sans; -fx-font-weight: 800; -fx-font-size: 16.0">
                    <HBox.margin>
                        <Insets>
                            <top>-2.5</top>
                        </Insets>
                    </HBox.margin>
                </Text>
            </children>
        </HBox>

        <HBox alignment="TOP_RIGHT" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="16.0">
            <children>
                <ImageView fitHeight="16.0" fitWidth="32.0" onMouseClicked="#closeMenuClicked" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/images/menu-icon.png" />
                    </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
                </ImageView>
            </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </HBox>

        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="305.0" minWidth="320.0" prefHeight="305.0" prefWidth="320.0" spacing="12.0" AnchorPane.bottomAnchor="128.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="47.0">
            <children>


                <Text fill="WHITE" style="-fx-font-family: Open Sans; -fx-font-weight: 800; -fx-font-size: 26.0" text="Menu" textAlignment="CENTER" wrappingWidth="320.0">
                    <VBox.margin>
                        <Insets>
                            <top>20</top>
                            <bottom>40</bottom>
                        </Insets>
                    </VBox.margin>
                </Text>

                <Button fx:id="givePenaltyBtn" mnemonicParsing="false" onMouseClicked="#givePenaltyClicked" style="-fx-font-family: Open Sans; -fx-font-weight: 800; -fx-font-size: 16.0" styleClass="button-hover" text="Give penalty" textFill="WHITE">
                   <cursor>
                      <Cursor fx:constant="HAND" />
                   </cursor>
                </Button>

                <Button mnemonicParsing="false" onMouseClicked="#closeMenuClicked" styleClass="button-hover" style="-fx-font-family: Open Sans; -fx-font-weight: 800; -fx-font-size: 16.0" text="Close menu" textFill="WHITE">
                   <cursor>
                      <Cursor fx:constant="HAND" />
                   </cursor>
                </Button>

                <Button mnemonicParsing="false" onMouseClicked="#quitGameClicked" styleClass="button-hover" style="-fx-font-family: Open Sans; -fx-font-weight: 800; -fx-font-size: 16.0" text="Quit to main menu" textFill="WHITE">
                   <cursor>
                      <Cursor fx:constant="HAND" />
                   </cursor>
                </Button>

                <Text fill="WHITE" text="Ranking" textAlignment="CENTER" style="-fx-font-family: Open Sans; -fx-font-weight: 800; -fx-font-size: 20.0" wrappingWidth="320.0">
                    <VBox.margin>
                        <Insets>
                            <top>40</top>
                        </Insets>
                    </VBox.margin>
                </Text>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="120.0" prefWidth="320.0">
                    <content>
                        <VBox fx:id="playerRankingContainer" alignment="CENTER" prefHeight="15.0" prefWidth="195.0">

                        </VBox>
                    </content>
                </ScrollPane>

            </children>
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
        </VBox>
    </children>

</AnchorPane>
